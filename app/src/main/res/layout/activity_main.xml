<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/header"
        layout="@layout/component_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/heroBanner"
        layout="@layout/component_hero_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/be_vietnam_extrabold"
        android:lineSpacingExtra="-5sp"
        android:text="Vous souhaitez voter pour une boulangerie ?"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/be_vietnam"
        android:lineSpacingExtra="-5sp"
        android:text="Entrez le code indiquÃ© sur votre ticket de caisse"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="1dp">

        <EditText
            android:id="@+id/code1"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:autofillHints="X"
            android:backgroundTint="#fff"
            android:hint="X"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#BABAB2" />

        <EditText
            android:id="@+id/code2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:autofillHints="XXXX"
            android:backgroundTint="#fff"
            android:hint="XXXX"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#BABAB2" />

        <EditText
            android:id="@+id/code3"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:autofillHints="XXXX"
            android:backgroundTint="#fff"
            android:hint="XXXX"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#BABAB2" />

        <EditText
            android:id="@+id/code4"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:autofillHints="XXXX"
            android:backgroundTint="#fff"
            android:hint="XXXX"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#BABAB2" />

        <EditText
            android:id="@+id/code5"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:autofillHints="XXXX"
            android:backgroundTint="#fff"
            android:hint="XXXX"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#BABAB2" />

    </LinearLayout>

    <Button
        android:id="@+id/validBakeryCode"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="450dp"
        android:text="Valider"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="23sp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/accentBackground"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/viewMyRatings"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:enabled="false"
        android:textStyle="italic"
        android:text="Voir mes votes (0)"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="23sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/accentBackground"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>